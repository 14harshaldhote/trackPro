# ===============================
# ðŸ”§ COMMON SETTINGS
# ===============================

# Django settings
DJANGO_DEBUG=True
DEBUG=True
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1

# Google OAuth (get from https://console.cloud.google.com/)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# CSRF for Vercel deployment
CSRF_TRUSTED_ORIGINS=https://your-app.vercel.app

# ===============================
# ðŸ’» LOCAL DEVELOPMENT (on your Mac)
# Use the *public* proxy URL here
# ===============================

# From Railway -> DATABASE_PUBLIC_URL
DATABASE_URL_LOCAL=postgresql://user:password@host:port/database

PGHOST_LOCAL=your-railway-public-host.proxy.rlwy.net
PGPORT_LOCAL=12345
PGDATABASE_LOCAL=railway
PGUSER_LOCAL=postgres
PGPASSWORD_LOCAL=your-database-password


# ===============================
# â˜ï¸ RAILWAY DEPLOYMENT (inside Railway network)
# Use the *internal* URL here
# ===============================

# From Railway -> DATABASE_URL
DATABASE_URL=postgresql://user:password@postgres.railway.internal:5432/database

PGHOST=postgres.railway.internal
PGPORT=5432
PGDATABASE=railway
PGUSER=postgres
PGPASSWORD=your-database-password

POSTGRES_DB=railway
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-database-password

# Optional Railway-related
PGDATA=/var/lib/postgresql/data/pgdata
RAILWAY_DEPLOYMENT_DRAINING_SECONDS=60
SSL_CERT_DAYS=820