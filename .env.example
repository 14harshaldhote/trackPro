# Django Secret Key
SECRET_KEY=your-secret-key-here

# Database Configuration (for local MySQL)
DB_NAME=tracker
DB_USER=root
DB_PASSWORD=your-database-password
DB_HOST=127.0.0.1
DB_PORT=3306

# Production Database URL (Railway/Vercel)
# Uncomment and set this in production
# DATABASE_URL=postgresql://user:password@host:port/dbname

# Google OAuth2 Credentials
# Get these from: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Debug Mode (set to False in production)
DEBUG=True

# Allowed Hosts (comma-separated, e.g., localhost,example.com)
ALLOWED_HOSTS=localhost,127.0.0.1

# CSRF Trusted Origins (for production, comma-separated)
# Example: https://yourapp.vercel.app,https://yourdomain.com
CSRF_TRUSTED_ORIGINS=
