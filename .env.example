# ===============================

# Django settings
DJANGO_DEBUG=True
DJANGO_SECRET_KEY=change-me-local-secret-key

# ===============================
# ðŸ’» LOCAL DEVELOPMENT (on your Mac)
# Use the *public* proxy URL here
# ===============================

# From Railway -> DATABASE_PUBLIC_URL
# Example (do NOT paste this directly without your real password):
# postgresql://postgres:<PASSWORD>@switchback.proxy.rlwy.net:47592/railway
DATABASE_URL_LOCAL=postgresql://postgres:YOUR_RAILWAY_PASSWORD_HERE@switchback.proxy.rlwy.net:47592/railway

PGHOST_LOCAL=switchback.proxy.rlwy.net
PGPORT_LOCAL=47592
PGDATABASE_LOCAL=railway
PGUSER_LOCAL=postgres
PGPASSWORD_LOCAL=YOUR_RAILWAY_PASSWORD_HERE


# ===============================
# â˜ï¸ RAILWAY DEPLOYMENT (inside Railway network)
# Use the *internal* URL here
# ===============================

# From Railway -> DATABASE_URL
# postgresql://postgres:<PASSWORD>@postgres.railway.internal:5432/railway
DATABASE_URL=postgresql://postgres:YOUR_RAILWAY_PASSWORD_HERE@postgres.railway.internal:5432/railway

PGHOST=postgres.railway.internal
PGPORT=5432
PGDATABASE=railway
PGUSER=postgres
PGPASSWORD=YOUR_RAILWAY_PASSWORD_HERE

POSTGRES_DB=railway
POSTGRES_USER=postgres
POSTGRES_PASSWORD=YOUR_RAILWAY_PASSWORD_HERE

# Optional Railway-related
PGDATA=/var/lib/postgresql/data/pgdata
RAILWAY_DEPLOYMENT_DRAINING_SECONDS=60
SSL_CERT_DAYS=820
